<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ContactsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="25dp"
        android:text="@string/text_contacts"
    />

    <Button
        android:id="@+id/button_contacts_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="25dp"
        android:layout_marginHorizontal="80dp"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_call"
        android:text="@string/button_contacts_tel_text"
    />

    <Button
        android:id="@+id/button_contacts_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="25dp"
        android:layout_marginHorizontal="80dp"
        android:textSize="10sp"
        android:drawableLeft="@drawable/ic_email"
        android:text="@string/button_contacts_email_text"
    />

    <Button
        android:id="@+id/button_contacts_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="25dp"
        android:layout_marginHorizontal="80dp"
        android:textSize="11sp"
        android:drawableLeft="@drawable/ic_web"
        android:text="@string/button_contacts_website_text"
        />

</LinearLayout>
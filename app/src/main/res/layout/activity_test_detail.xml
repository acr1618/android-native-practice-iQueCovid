<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".views.TestDetailActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/detail_text_date"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="01/01/2021"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/detail_text_local"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_text_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hospital Santa Maria"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/detail_text_result"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Negativo"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/detail_text_comprovative"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pic_test"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="18dp"

        android:src="@drawable/teste_covid" />

    <TextView
        android:id="@+id/detail_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Negativo"
        android:textSize="16dp"
        android:visibility="invisible" />
</LinearLayout>